@model CreateReservationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}
<div class="col-md-12 block-9 mb-md-5">
    <form method="post" class="bg-light p-5 contact-form">
        <h3 class="alert alert-success">Araç Rezervasyon Formu</h3>
        <br />
            <input asp-for="CarID" type="hidden" value="@ViewBag.v3" class="form-control" placeholder="Almak İstediğiniz Araba">
        <div class="form-group">
            <input asp-for="Name" type="text" class="form-control" placeholder="Adınız">
        </div>
        <div class="form-group">
            <input asp-for="Surname" type="text" class="form-control" placeholder="Soyadınız">
        </div>
        <div class="form-group">
            <input asp-for="Email" type="email" class="form-control" placeholder="Mail Adresiniz">
        </div>
        <div class="form-group">
            <input asp-for="Phone" type="tel" class="form-control" placeholder="Telefon Numaranız">
        </div>
        <div class="form-group">
            @Html.DropDownListFor(x => x.DropOffLocationID, (List<SelectListItem>)ViewBag.Values, new { @class = "form-control"})
        </div>
        <div class="form-group">
            @Html.DropDownListFor(x => x.PickUpLocationID, (List<SelectListItem>)ViewBag.Values, new { @class = "form-control"})
        </div>
        <div class="form-group">
            <input asp-for="Age" type="text" class="form-control" placeholder="Yaşınız">
        </div>
        <div class="form-group">
            <input asp-for="DriverLicenseYear" type="text" class="form-control" placeholder="Ehliyet Yılınız">
        </div>
        <div class="form-group">
            <textarea asp-for="Description" cols="30" rows="7" class="form-control" placeholder="Varsa Eklemek İstedikleriniz"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>